@model OrderViewModel

@{
    ViewBag.Title = "Product List";
}

<h1 class="my-4 text-center">Products</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (Product product in @Model.Products)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@Url.Content("~/images/" + product?.ImageUrl)"
                     class="card-img-top"
                     style="max-height: 300px; width: 100%; object-fit: contain;"
                     alt="@product.Name">

                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <h6 class="text-primary">@product.Price.ToString("C")</h6>


                    <form asp-action="AddItem" method="get" class="mt-3">
                        <input type="hidden" value="@product.ProductId" name="prodId" />

                        <div class="mb-2">
                            <label for="prodQty_@product.ProductId" class="form-label">Quantity</label>
                            <input type="number" id="prodQty_@product.ProductId" name="prodQty" class="form-control" min="1" value="1" required />
                        </div>

                        <button class="btn btn-info w-100" type="submit">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
