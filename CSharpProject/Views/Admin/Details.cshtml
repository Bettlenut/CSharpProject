@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="my-4 text-center">Product Details</h2>

<div class="card mx-auto shadow-sm border-0" style="max-width: 600px;">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="~/images/@Model.ImageUrl"
             alt="@Model.Name"
             class="card-img-top"
             style="max-height: 300px; object-fit: contain; background-color: #f8f9fa; padding: 10px;" />
    }

    <div class="card-body">
        <h4 class="card-title mb-3">@Model.Name</h4>

        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>Description:</strong> @Model.Description</li>
            <li class="list-group-item"><strong>Price:</strong> $@Model.Price.ToString("N2")</li>
            <li class="list-group-item"><strong>In Stock:</strong> @Model.Stock</li>
            <li class="list-group-item"><strong>Category:</strong> @Model.Category?.Name</li>
        </ul>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="AddEdit" asp-route-id="@Model.ProductId" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
        </div>
    </div>
</div>
